/* Block Contact */
.block.contact {  }

/* Override Holder */
.block.contact > .holder {
    max-width: 680px;
}

/* Block Contact - Contact Info */
.block.contact .contact-info {
    margin-bottom: 35px;
}

.block.contact .contact-info .phones {  }

.block.contact .contact-info .address {  }

/* Block Contact - Contact Form */
.block.contact .contact-form {
    min-height: 150px;
}

.block.contact .contact-form input[type=text],
.block.contact .contact-form textarea {
    border: 1px solid #dcdcdc;
    display: block;
    margin-bottom: 10px;
    padding: 5px;
    width: 100%;
}

.block.contact .contact-form textarea {
    height: 125px;
    resize: none;
}

.block.contact .contact-form input[type=submit] {
    background-color: #dcdcdc;
    border: none;
    color: #666;
    cursor: pointer;
    display: block;
    margin-left: auto;
    max-width: 180px;
    padding: 5px;
    text-align: center;
    width: 100%;
}