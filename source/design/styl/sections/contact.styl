/* Override Holder */
.contact
  & > .holder
    max-width 680px


  /* Block Contact - Contact Info */
  .contact-info
    margin-bottom 35px


  /* Block Contact - Contact Form */
  .contact-form
    min-height 150px

    input[type=text],
    textarea
      border 1px solid #dcdcdc
      display block
      margin-bottom 10px
      padding 5px
      width 100%

    textarea
      height 125px
      resize none

    input[type=submit]
      background-color #dcdcdc
      border none
      color #666
      cursor pointer
      display block
      margin-left auto
      max-width 180px
      padding 5px
      text-align center
      width 100%
