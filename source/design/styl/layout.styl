body
  font-smoothing antialiased
  text-rendering optimizeLegibility
  .no-scroll
    overflow hidden


.holder 
  margin 0 auto
  max-width 1010px
  width 100%


.align-top,
.align-middle,
.align-bottom 
  display inline-block
  float none
  margin-left -2px
  margin-right -2px


.align-top
  vertical-align top
.align-middle
  vertical-align middle
.align-bottom
  vertical-align bottom


.table-layout
  display table
  width 100%
.table-cell-layout
  display table-cell


.page-loader 
  background-color rgba(205, 205, 205, 0.5)
  left 0
  height 100%
  opacity 0
  position fixed
  top 0
  transition opacity 375ms
  width 100%
  z-index 99
  &.displayed
    opacity 1


.blurry 
  filter blur(3px)
  transition filter 375ms


/* Outer wrapper */
.outer-wrapper 
  margin-top 75px
  position relative


/* Block */
.block 
  padding 65px 0

  .header
    margin-bottom 35px

    .title
      margin-top 0
      text-align center

      
@media (max-width: 767px)
  
  body
    &.mobile-navigation-open 
      overflow hidden
  

  /* Outer wrapper */
  .outer-wrapper 
    right 0
    transition right 350ms

    .mobile-navigation-open
      right 250px
  